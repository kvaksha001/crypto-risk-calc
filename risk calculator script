def calculate_position():
    print("--- ðŸ“Š Crypto Futures Risk Calculator ---")
    
    try:
        deposit = float(input("Enter Deposit ($): "))
        risk_per_trade = float(input("Risk per trade (%): ")) / 100
        entry_price = float(input("Entry Price: "))
        stop_loss = float(input("Stop Loss Price: "))
        
        # Calculate risk amount in dollars
        risk_amount = deposit * risk_per_trade
        
        # Calculate price difference percentage
        price_diff_percent = abs(entry_price - stop_loss) / entry_price
        
        # Calculate position size
        position_size_usd = risk_amount / price_diff_percent
        position_size_tokens = position_size_usd / entry_price
        
        print(f"\nâœ… RESULTS:")
        print(f"Risk Amount: ${risk_amount:.2f}")
        print(f"Stop Loss Distance: {price_diff_percent*100:.2f}%")
        print(f"Recommended Position Size: ${position_size_usd:.2f}")
        print(f"Tokens to buy/sell: {position_size_tokens:.4f}")
        
    except ValueError:
        print("Error: Please enter valid numbers.")

if __name__ == "__main__":
    calculate_position()
